{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off",
        "indent": "off",
        "linebreak-style": "off",
        "quotes": "off",
        "prefer-destructuring": "off",
        "arrow-body-style": "off",
        "arrow-parens": "off",
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "no-param-reassign": ["error", { "props": false }]
    }
}